package estudos;

import java.util.Scanner;

public class Estudos {

	public static void main(String[] args) {
		
	Scanner teclado = new Scanner(System.in);
	
	System.out.println("Informe a sua idade: ");
	int idade = teclado.nextInt();
	
	if (idade < 15) {
		System.out.println("Na sua idade não é possível votar");
	}else if ((idade >= 16)&&(idade<18)) {
		System.out.println("Na sua idade o voto é opcional");
	}else if ((idade >= 18)&&(idade > 70)) {
		System.out.println("Na sua idade o voto é obrigatório");
	}else if ((idade >= 70)&&(idade <125)) {
		System.out.println("Na sua idade o voto é opcional");
	}else {
		System.out.println("Idade inválida! Inicie o programa novamente.");
	}
		
	teclado.close();
		
	}

}



