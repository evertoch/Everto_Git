package estudos;

import java.util.Scanner;

public class Estudos {

	public static void main(String[] args) {
		
	float salario;
	
	Scanner teclado = new Scanner(System.in);
	
	System.out.println("Informe o valor pago por hora trabalhada");
	float hora = teclado.nextFloat();
	
	System.out.println("Informe a quantidade de horas trabalhadas");
	float qtdhoras = teclado.nextFloat();
	
	salario = (hora * qtdhoras);
	
	System.out.println("O valor em reais a ser recebidos é: " +salario);
	
	teclado.close();

	}

}



