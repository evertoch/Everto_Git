package estudos;

import java.util.Scanner;

public class Estudos {

	public static void main(String[] args) {
		
		Scanner teclado = new Scanner(System.in);
	
		System.out.println("Informe o valor da hora trabalhada em reais: ");
		float valor = teclado.nextFloat();
		
		System.out.println("Informe quantas horas foram trabalhadas: ");
		float horas = teclado.nextFloat();
		
		float salario = (valor * horas);
		
		System.out.println("O valor a ser recebido é R$ "+salario +".");;
	
	}

}



